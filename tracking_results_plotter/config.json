{
  "plugin_info": {
    "name": "Tracking Results Plotter",
    "version": "1.0.0",
    "author": "Assistant",
    "description": "Comprehensive particle tracking visualization and analysis plugin",
    "compatible_flika_version": "0.2.25"
  },
  
  "display_settings": {
    "default_point_size": 3,
    "default_line_width": 2,
    "default_point_color": "red",
    "default_line_color": "blue",
    "default_colormap": "viridis",
    "show_tracks_default": true,
    "show_points_default": true,
    "auto_update_default": true,
    "max_tracks_display": 1000,
    "max_points_display": 10000
  },
  
  "color_schemes": {
    "available_colormaps": [
      "viridis",
      "plasma", 
      "hot",
      "cool",
      "rainbow",
      "jet",
      "hsv"
    ],
    "basic_colors": [
      "red",
      "blue", 
      "green",
      "black",
      "yellow",
      "cyan",
      "magenta",
      "orange",
      "purple",
      "brown"
    ],
    "color_normalization": {
      "auto_range": true,
      "percentile_clipping": [1, 99],
      "use_robust_scaling": true
    }
  },
  
  "data_handling": {
    "column_detection": {
      "track_id_columns": [
        "track_number",
        "track_id", 
        "id",
        "particle",
        "trajectory"
      ],
      "frame_columns": [
        "frame",
        "Frame",
        "t",
        "time",
        "timepoint"
      ],
      "x_columns": [
        "x",
        "X",
        "x_coord",
        "position_x",
        "xpos"
      ],
      "y_columns": [
        "y",
        "Y", 
        "y_coord",
        "position_y",
        "ypos"
      ],
      "intensity_columns": [
        "intensity",
        "Intensity",
        "signal",
        "amp",
        "amplitude",
        "brightness"
      ],
      "experiment_columns": [
        "Experiment",
        "experiment", 
        "condition",
        "sample",
        "group",
        "treatment"
      ]
    },
    "validation_settings": {
      "min_track_length": 2,
      "max_coordinate_range": 100000,
      "min_coordinate_range": 0.001,
      "max_frame_gap": 10,
      "required_columns_strict": false
    },
    "derived_columns": {
      "calculate_track_length": true,
      "calculate_displacement": true,
      "calculate_frame_in_track": true,
      "calculate_velocity": false,
      "calculate_direction": false
    }
  },
  
  "analysis_settings": {
    "track_statistics": {
      "calculate_radius_gyration": true,
      "calculate_straightness": true,
      "calculate_velocity_stats": true,
      "calculate_turning_angles": true,
      "calculate_msd": false,
      "min_points_for_stats": 3
    },
    "filtering": {
      "available_operators": [
        ">",
        ">=", 
        "<",
        "<=",
        "==",
        "!="
      ],
      "filter_preview_max_points": 1000,
      "auto_apply_filters": false
    },
    "mathematical_constants": {
      "time_interval_default": 1.0,
      "pixel_size_default": 1.0,
      "distance_units": "pixels",
      "time_units": "frames"
    }
  },
  
  "plotting_settings": {
    "matplotlib_settings": {
      "figure_dpi": 300,
      "figure_size_default": [10, 8],
      "font_size": 12,
      "line_width": 2,
      "marker_size": 50,
      "alpha_default": 0.7
    },
    "plot_types": {
      "flower_plots": {
        "center_trajectories": true,
        "show_start_end_markers": true,
        "max_tracks_per_plot": 20,
        "grid_layout_auto": true
      },
      "time_traces": {
        "max_traces_display": 10,
        "show_statistics_overlay": true,
        "normalize_traces": false
      },
      "histograms": {
        "default_bins": 50,
        "show_statistics": true,
        "show_distribution_fit": false
      },
      "scatter_plots": {
        "show_regression_line": false,
        "show_correlation": true,
        "point_alpha": 0.6
      }
    },
    "export_settings": {
      "default_format": "png",
      "default_dpi": 300,
      "bbox_inches": "tight",
      "supported_formats": ["png", "pdf", "svg", "jpg", "tiff"]
    }
  },
  
  "ui_settings": {
    "window_settings": {
      "default_width": 900,
      "default_height": 700,
      "remember_position": true,
      "remember_size": true,
      "default_tab": 0
    },
    "table_settings": {
      "max_preview_rows": 100,
      "auto_resize_columns": true,
      "show_data_types": false,
      "decimal_places": 3
    },
    "progress_settings": {
      "show_progress_bars": true,
      "update_frequency_ms": 100,
      "show_time_estimates": true
    },
    "logging_settings": {
      "log_level": "INFO",
      "log_to_file": true,
      "max_log_file_size_mb": 10,
      "keep_log_backups": 3
    }
  },
  
  "performance_settings": {
    "memory_management": {
      "max_tracks_in_memory": 10000,
      "chunk_size_large_datasets": 1000,
      "garbage_collection_frequency": 100,
      "use_data_compression": false
    },
    "display_optimization": {
      "roi_creation_batch_size": 50,
      "overlay_update_delay_ms": 100,
      "max_overlays_realtime": 500,
      "use_display_caching": true
    },
    "processing_optimization": {
      "parallel_processing": false,
      "num_threads": 4,
      "use_vectorized_operations": true,
      "optimize_for_large_datasets": true
    }
  },
  
  "export_settings": {
    "data_export": {
      "default_format": "csv",
      "include_metadata": true,
      "decimal_precision": 6,
      "encoding": "utf-8",
      "supported_formats": ["csv", "xlsx", "json", "hdf5"]
    },
    "statistics_export": {
      "include_summary_stats": true,
      "include_distribution_stats": true,
      "format_numbers": true,
      "create_summary_report": false
    },
    "plot_export": {
      "default_dpi": 300,
      "transparent_background": false,
      "include_metadata": true,
      "optimize_file_size": false
    }
  },
  
  "advanced_features": {
    "plugin_extensions": {
      "allow_custom_colormaps": true,
      "allow_custom_filters": true,
      "allow_custom_analysis": true,
      "plugin_hooks_enabled": false
    },
    "experimental_features": {
      "3d_visualization": false,
      "interactive_plots": false,
      "real_time_analysis": false,
      "machine_learning_integration": false
    },
    "debugging": {
      "verbose_logging": false,
      "save_intermediate_results": false,
      "profile_performance": false,
      "validate_all_operations": false
    }
  },
  
  "file_paths": {
    "temp_directory": "temp",
    "cache_directory": "cache", 
    "log_directory": "logs",
    "config_backup_directory": "config_backups",
    "export_default_directory": "exports"
  },
  
  "compatibility": {
    "flika_versions": ["0.2.25", "0.2.26", "0.3.0"],
    "python_versions": ["3.7", "3.8", "3.9", "3.10", "3.11"],
    "operating_systems": ["Windows", "macOS", "Linux"],
    "dependency_requirements": {
      "numpy": ">=1.19.0",
      "pandas": ">=1.3.0", 
      "matplotlib": ">=3.3.0",
      "scipy": ">=1.7.0",
      "qtpy": ">=1.9.0"
    }
  },
  
  "user_preferences": {
    "first_run": true,
    "show_welcome_message": true,
    "check_for_updates": true,
    "send_usage_statistics": false,
    "backup_settings": true
  }
}